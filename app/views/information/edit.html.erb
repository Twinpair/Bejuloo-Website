        <%= f.text_field :header_button_right_link , class: "form-control" %><br>

        <%= f.label :header_image %>
        <%= f.file_field :header_image, accept: 'image/jpeg,image/gif,image/png', class: "form-control" %><br>
        <p><b>Current Header Image:</b><%= image_tag(@information.header_image? ? @information.header_image.url : asset_path('hero.jpg'), style: 'width: 100%') %></p><br>

        <%= f.label :features_title %>
        <%= f.text_field :features_title , class: "form-control" %><br>

        <%= f.label :features_left_title %>
        <%= f.text_field :features_left_title , class: "form-control" %><br>

        <%= f.label :features_left_text %>
        <%= f.text_area :features_left_text , class: "form-control", style: "resize: none;", rows: "5" %><br>

        <%= f.label :features_left_link_text %>
