        <p><b>Current Testimonial Image:</b><%= image_tag(@information.testimonial_image? ? @information.testimonial_image.url : asset_path('testimonial-cover.jpg'), style: 'width: 100%') %></p><br>

        <%= f.label :contact_title %>
        <%= f.text_field :contact_title , class: "form-control" %><br>

        <%= f.label :contact_description %>
        <%= f.text_field :contact_description , class: "form-control" %><br>

        <%= f.label :email %>
        <%= f.text_field :email , class: "form-control" %><br>

        <%= f.label :phone %>
        <%= f.text_field :phone , class: "form-control" %><br>

        <%= f.label :vimeo %>
        <%= f.text_field :vimeo , class: "form-control" %><br>

        <%= f.label :facebook %>
        <%= f.text_field :facebook , class: "form-control" %><br>

        <%= f.label :twitter %>
        <%= f.text_field :twitter , class: "form-control" %><br>

        <%= f.label :instagram %>
        <%= f.text_field :instagram , class: "form-control" %><br>

        <%= f.label :behance %>
        <%= f.text_field :behance , class: "form-control" %><br>

        <div class="col-lg-6">
          <%= f.submit "Update", class: "btn btn-success btn-lg", style: "margin-bottom: 30px;" %>
        </div>
        <div class="col-lg-6">
          <a href="/information" class="btn btn-danger btn-lg">Cancel</a>
        </div>

      <% end %>
    </div>
  </div>
</div>