        <%= f.text_field :features_right_icon , class: "form-control" %><br>

        <%= f.label :about_title %>
        <%= f.text_field :about_title , class: "form-control" %><br>

        <%= f.label :about_description %>
        <%= f.text_area :about_description , class: "form-control", style: "resize: none;", rows: "10" %><br>

        <%= f.label :about_image %>
        <%= f.file_field :about_image, accept: 'image/jpeg,image/gif,image/png', class: "form-control" %><br>
        <p><b>Current About Image:</b><%= image_tag(@information.about_image? ? @information.about_image.url : asset_path('me.jpg'), style: 'width: 100%') %></p><br>

