        <%= f.text_field :features_left_icon , class: "form-control" %><br>

        <%= f.label :features_middle_title %>
        <%= f.text_field :features_middle_title , class: "form-control" %><br>

        <%= f.label :features_middle_text %>
        <%= f.text_area :features_middle_text , class: "form-control", style: "resize: none;", rows: "5" %><br>

        <%= f.label :features_middle_link_text %>
