<div class="container">
  <div class="row">
    <%= link_to "Go Back To Homepage", root_path, class: "btn btn-success", style: "margin-top: 20px;" %>
    <div class="text-center col-lg-12">
      <h2>Edit Your Website</h2>

      <div class="row">
        <h3><span>View or Edit the information on your site</span></h3>
        <div class="col-lg-3 col-lg-offset-3">
          <p><%= link_to "View Information", information_index_path, class: "btn btn-primary btn-lg" %></p>
        </div>
        <div class="col-lg-3">
          <p><%= link_to "Edit Information", information_edit_path, class: "btn btn-warning btn-lg" %></p>
        </div>
      </div>

      <div class="row">
        <h3><span>View or Edit the testimonials on your site</span></h3>
        <div class="col-lg-3 col-lg-offset-3">
          <p><%= link_to "View Testimonials_path", testimonials_path, class: "btn btn-primary btn-lg" %></p>
        </div>
        <div class="col-lg-3">
          <p><%= link_to "Edit Testimonials_path", testimonials_path, class: "btn btn-warning btn-lg" %></p>
        </div>
      </div>

      <div class="row">
        <h3><span>View messages you have received on your site</span></h3>
        <p><%= link_to "View Messages", messages_path, class: "btn btn-primary btn-lg" %></p>
      </div>

    </div>
  </div>
</div>