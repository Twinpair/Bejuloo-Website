<div class="container">
  <div class="row text-center">
    <div class="col-lg-6 col-lg-offset-3">
      <h1><u><%= title %></u></h1>
      <span><span class="required">* </span>fields are required</span><br><br>

      <%= form_for(@testimonial) do |f| %> 
        <% if @testimonial.errors.any? %>
          <div id="error_explanation">
            <div class="alert alert-danger">
              The form contains <%= pluralize(@testimonial.errors.count, "error") %>.
              <ul id="errors">
              <% @testimonial.errors.full_messages.each do |msg| %>
                <li class="required">- <%= msg %></li>
              <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <label>Quote</label><br>
        <%= f.text_area :quote, style: "resize: none;", rows: "5", class: "form-control", required: true %><br>

        <label>Source</label><br>
        <%= f.text_field :source, class: "form-control" %><br>

        <label>Order (<b> Must be a number greater than 0</b>)</label><br>
        <span>Note: If order field left blank, this testimonial will be added to the end of the order</span><br>
        <%= f.text_field :order_listed, class: "form-control" %><br><br>

        <div class="col-lg-6">
          <%= f.submit button, class: "btn btn-success btn-lg", style: "margin-bottom: 30px;" %>
        </div>

        <% if button == "Create" %>
          <div class="col-lg-6">
            <a href="/testimonials" class="btn btn-danger btn-lg">Cancel</a>
          </div>
        <% elsif button == "Update" %>
          <div class="col-lg-6">
            <%= link_to "Delete", @testimonial, method: :delete, data: { confirm: "Are you sure you want to delete this testimonial?" }, class: "btn btn-danger btn-lg" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>